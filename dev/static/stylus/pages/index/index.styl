h1
    margin 0
    width 123px
    font-family headerFont
    font-size 47.34px

.defaultBlock_bottom
    align-items baseline

.offer__lang
    font-size 16px
    font-family headerFont
    transform rotate(270deg)
    transform-origin bottom right

.offer__info
    align-self flex-end

.lang
    color grayText

.lang:hover
    color #000
    cursor pointer

.about
    display flex
    flex-direction column
    align-items center
    background grayBG

h2
    margin 100px 0 0 0
    font-family headerFont
    font-size bigFontSize

.about__items
    display flex
    flex-direction column
    align-items center

.about__item1,.about__item2,.about__item3
    margin 20px 0 20px 0

.about__item2
    width 400px

.about__item3
    width 350px

.about__text
    text-align center
