h1
    margin 0
    width 123px
    font-family headerFont
    font-size 47.34px

.defaultBlock_bottom
    align-items baseline

.offer
    padding 0 0 100px 0

.offer__lang
    font-size 16px
    font-family headerFont
    transform rotate(270deg)
    transform-origin bottom right

.offer__info
    align-self flex-end

.lang
    color grayText

.lang:hover
    color #000
    cursor pointer

.about
    padding 100px 0 100px 0
    display flex
    flex-direction column
    align-items center
    background grayBG

h2
    margin 0 auto
    font-family headerFont
    font-size bigFontSize

.about__items
    display flex
    flex-direction column
    align-items center

.about__item
    margin 20px 0 20px 0
    width 375px

.about__text
    text-align center

.skills
    padding 100px 0 100px 0
    display flex
    flex-direction column
    align-items center

.contacts
    padding 100px 0 100px 0
    display flex
    flex-direction column
    align-items center
    gap 1rem   

.skills__items, 
.contacts__items
    padding 65px 0 30px 0
    display flex
    flex-direction row
    justify-content space-around
    gap 4rem  

.skills__item,
.contacts__item 
    display flex
    flex-direction column
    align-items center
    gap 1rem

.portfolio__item
    margin 60px 0 60px 0
    font-size 18px
    font-family mainFont
    line-height 22px
    text-align center
    text-decoration-line underline

.portfolio
    padding 100px 0 100px 0
    background grayBG
    display flex
    flex-direction column
    align-items center