extends ../layout/main

block variables
	- var title = 'Главная страница'
	- var pageClass = 'index-page'

block content
	.offer
		.defaultBlock.defaultBlock_bottom
			.offer__name
				h1 Denis Novik
			.offer__info
				p UX | UI designer
				p.offer__info2 24 years old, Minsk
			.offer__lang
				p <span class="lang">RU</span> | ENG
		.img
			img(src="static/img/content/DenisNovik.png", alt="Denis Novik")
	.about
		h2 About me
		.about__items
			.about__item1
				p.about__text Hi, I'm Denis – UX/UI designer from Minsk.
				p.about__text I'm interested in design and everything connected with it.
			.about__item2
				p.about__text I'm studying at courses "Web and mobile design interfaces" in IT-Academy.
			.about__item3
				p.about__text Ready to implement excellent projects with wonderful people.