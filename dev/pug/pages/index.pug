extends ../layout/main

block variables
	- var title = 'Главная страница'
	- var pageClass = 'index-page'

block content
	.offer
		.defaultBlock.defaultBlock_bottom
			.offer__name
				h1 Denis Novik
			.offer__info
				p UX | UI designer
				p.offer__info2 24 years old, Minsk
			.offer__lang
				p <span class="lang">RU</span> | ENG
		.img
			img(src="static/img/content/DenisNovik.png", alt="Denis Novik")

	.about
		h2 About me
		.about__items
			.about__item
				p.about__text Hi, I'm Denis – UX/UI designer from Minsk.
				p.about__text I'm interested in design and everything connected with it.
			.about__item
				p.about__text I'm studying at courses "Web and mobile design interfaces" in IT-Academy.
			.about__item
				p.about__text Ready to implement excellent projects with wonderful people.

	.skills
		h2 Skills
		p I work in such programs as
		.skills__items
			.skills__item
				img(src="static/img/content/ps.png", alt="Adobe Photoshop")
				p Adobe Photoshop
				img(src="static/img/content/4stars.png", alt="Stars")
			.skills__item
				img(src="static/img/content/ai.png", alt="Adobe Illustrator")
				p Adobe Illustrator
				img(src="static/img/content/3stars.png", alt="Stars")
			.skills__item
				img(src="static/img/content/ae.png", alt="Adobe Effects")
				p Adobe After Effects
				img(src="static/img/content/4stars.png", alt="Stars")
			.skills__item
				img(src="static/img/content/fs.png", alt="Figma")
				p Figma
				img(src="static/img/content/4stars.png", alt="Stars")